<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GuideActivity"
    tools:showIn="@layout/activity_guide">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/_2_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sp_bt_gd"
            android:padding="10dp"
            android:text="跳转Toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/_2_scrolling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sp_bt_gd"
            android:padding="10dp"
            android:text="跳转 ScrollingActivity"
            app:layout_constraintTop_toBottomOf="@+id/_2_toolbar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/_2_recycle_view_suspension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sp_bt_gd"
            android:padding="10dp"
            android:text="跳转 RecycleView Suspension"
            app:layout_constraintTop_toBottomOf="@+id/_2_toolbar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/_2_top_suspension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sp_bt_gd"
            android:padding="10dp"
            android:text="跳转 Top Suspension"
            app:layout_constraintTop_toBottomOf="@+id/_2_toolbar" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>